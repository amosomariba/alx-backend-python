#!/bin/bash

# Script: kubctl-0x02
# Purpose: Perform blue-green deployment

echo "ğŸ“¦ Applying blue deployment..."
kubectl apply -f blue_deployment.yaml

echo "ğŸ“¦ Applying green deployment..."
kubectl apply -f green_deployment.yaml

echo "ğŸŒ Applying service..."
kubectl apply -f kubeservice.yaml

echo "â±ï¸ Waiting for green pod to be ready..."
sleep 10

echo "ğŸ” Listing all pods..."
kubectl get pods -l app=messaging-app

echo "ğŸ“œ Checking logs for green version..."
GREEN_POD=$(kubectl get pods -l version=green -o jsonpath="{.items[0].metadata.name}")
kubectl logs "$GREEN_POD"

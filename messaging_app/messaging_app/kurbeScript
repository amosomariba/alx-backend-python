#!/bin/bash

# kurbeScript: Start Minikube and check Kubernetes status

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null; then
  echo "âŒ Minikube is not installed. Please install it first."
  exit 1
fi

echo "âœ… Minikube is installed."

# Start Minikube with Docker as the driver
echo "ğŸš€ Starting Minikube cluster..."
minikube start --driver=docker

# Check cluster info
echo "ğŸ“¡ Verifying Kubernetes cluster status..."
kubectl cluster-info

# Get current pods
echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes is up and running!"
